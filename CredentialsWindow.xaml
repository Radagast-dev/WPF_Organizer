<Window x:Class="WPF_Organizer.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Organizer"
        mc:Ignorable="d"
        Title="Credentials" Height="450" Width="300" MaxHeight="450" MaxWidth="300" MinHeight="450" MinWidth="300">
    <Grid>
        <Label x:Name="topLabel" Content="Enter your Login Credentials" HorizontalAlignment="Center" Height="34" Margin="0,10,0,0" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="228,386,0,0" VerticalAlignment="Top" Click="loginButton_Click"/>

    </Grid>
</Window>
